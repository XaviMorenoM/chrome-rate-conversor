{
  "name": "USD to EUR",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "This extension updates the current text input numeric value from USD to EUR\nCreated with http://extensionizr.com",
  "homepage_url": "http://extensionizr.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ]
}
